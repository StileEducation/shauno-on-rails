<h1>New Button</h1>

<%= form_with model: @button do |form| %>
    <div>
        <%= form.label :uuid %><br>
        <%= form.text_field :uuid %>
        <% if @button.errors.any? %>
            <% @button.errors.full_messages_for(:uuid).each do |error| %>
                <div> <%= error %> </div>
            <% end %>
        <% end %>
    </div>

    <div>
        <%= form.label :is_active, "Button is inactive" %>: 
        <%= form.check_box :is_active, { checked: false }, false, true %>
    </div>

    <div>
        <%= form.label :reason %><br>
        <%= form.select :reason, @reasons %>
    </div>

    <div>
        <%= form.label :developer %><br>
        <%= form.select :developer, @developers %>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>